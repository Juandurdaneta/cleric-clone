---
import Container from '../ui/Container.astro';

const footerLinks = {
  cleric: [
    { label: 'About', href: '#about' },
    { label: 'Careers', href: '#careers' },
    { label: 'Product', href: '#product' },
    { label: 'Blog', href: '#blog' },
    { label: 'Webinars', href: '#webinars' },
  ],
  helpAndSecurity: [
    { label: 'Trust Center', href: '#trust' },
    { label: 'Terms of Use', href: '#terms' },
    { label: 'Privacy Policy', href: '#privacy' },
  ],
  useCases: [
    { label: 'Alert Investigation', href: '#alert-investigation' },
    { label: 'Root Cause Analysis', href: '#root-cause-analysis' },
    { label: 'Fix Recommendation', href: '#fix-recommendation' },
    { label: 'On-Call Automation', href: '#on-call-automation' },
    { label: 'Incident Triage', href: '#incident-triage' },
    { label: 'Deployment Failures', href: '#deployment-failures' },
  ],
};

const socialLinks = [
  {
    label: 'LinkedIn',
    href: 'https://linkedin.com/company/cleric',
    icon: `<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>`
  },
  {
    label: 'X',
    href: 'https://twitter.com/cleric',
    icon: `<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>`
  },
];
---

<footer class="bg-white py-16 tablet:py-20">
  <Container>
    <div class="flex flex-col tablet:flex-row gap-12 tablet:gap-8">
      <!-- Logo -->
      <div class="tablet:w-1/5">
        <a href="/" class="inline-block">
          <svg width="40" height="46" viewBox="0 0 40 46" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M20 0L40 11.5V34.5L20 46L0 34.5V11.5L20 0Z" fill="black"/>
            <path d="M20 8L32 15V29L20 36L8 29V15L20 8Z" fill="white"/>
            <path d="M20 14L26 17.5V24.5L20 28L14 24.5V17.5L20 14Z" fill="black"/>
          </svg>
        </a>
      </div>

      <!-- Navigation Columns -->
      <div class="flex-1 grid grid-cols-2 tablet:grid-cols-3 gap-8 tablet:gap-12">
        <!-- Cleric Column -->
        <div>
          <h4 class="text-base font-semibold text-dark mb-5">Cleric</h4>
          <ul class="space-y-3">
            {footerLinks.cleric.map(({ label, href }) => (
              <li>
                <a href={href} class="text-dark/70 hover:text-dark transition-colors text-sm">
                  {label}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Help & Security Column -->
        <div>
          <h4 class="text-base font-semibold text-dark mb-5">Help & Security</h4>
          <ul class="space-y-3">
            {footerLinks.helpAndSecurity.map(({ label, href }) => (
              <li>
                <a href={href} class="text-dark/70 hover:text-dark transition-colors text-sm">
                  {label}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Use Cases Column -->
        <div class="col-span-2 tablet:col-span-1">
          <h4 class="text-base font-semibold text-dark mb-5">Use Cases</h4>
          <ul class="space-y-3">
            {footerLinks.useCases.map(({ label, href }) => (
              <li>
                <a href={href} class="text-dark/70 hover:text-dark transition-colors text-sm">
                  {label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-16 tablet:mt-20 flex flex-col tablet:flex-row items-start tablet:items-center gap-6">
      <!-- Social Links -->
      <div class="flex items-center gap-4">
        {socialLinks.map(({ label, href, icon }) => (
          <a
            href={href}
            class="text-dark/70 hover:text-dark transition-colors"
            aria-label={label}
            target="_blank"
            rel="noopener noreferrer"
          >
            <Fragment set:html={icon} />
          </a>
        ))}
      </div>

      <!-- Copyright -->
      <div class="tablet:flex-1 tablet:text-center">
        <p class="text-dark/50 text-sm">
          Â© Cleric 2025
        </p>
      </div>

      <!-- Spacer for alignment -->
      <div class="hidden tablet:block tablet:w-[88px]"></div>
    </div>
  </Container>
</footer>
