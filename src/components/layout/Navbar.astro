---
import Container from '../ui/Container.astro';
import Button from '../ui/Button.astro';
---

<!-- Announcement Banner -->
<div id="announcement-banner" class="bg-dark text-white py-2.5 relative">
  <Container>
    <div class="flex items-center justify-center text-sm">
      <span class="inline-flex items-center gap-2">
        <span class="bg-primary text-white text-xs font-semibold px-2 py-0.5 rounded">NEW</span>
        <span class="text-white/90">Announcing our $30M Series A led by Sequoia</span>
        <a href="#" class="text-white hover:text-white/80 underline underline-offset-2 ml-1 transition-colors">Read more â†’</a>
      </span>
      <button
        id="dismiss-banner"
        class="absolute right-4 top-1/2 -translate-y-1/2 text-white/60 hover:text-white p-1 transition-colors"
        aria-label="Dismiss announcement"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </button>
    </div>
  </Container>
</div>

<!-- Main Navbar -->
<nav id="navbar" class="sticky top-0 z-40 bg-white border-b border-border/50 transition-all duration-300">
  <Container>
    <div class="flex items-center justify-between h-16 desktop:h-18">
      <!-- Logo -->
      <a href="/" class="flex items-center">
        <span class="text-xl font-semibold text-dark tracking-tight">Cleric</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden desktop:flex items-center gap-8">
        <a href="#products" class="text-body hover:text-dark transition-colors text-sm font-medium">Products</a>
        <a href="#security" class="text-body hover:text-dark transition-colors text-sm font-medium">Security</a>
        <a href="#resources" class="text-body hover:text-dark transition-colors text-sm font-medium">Resources</a>
        <a href="#docs" class="text-body hover:text-dark transition-colors text-sm font-medium">Docs</a>
        <a href="#pricing" class="text-body hover:text-dark transition-colors text-sm font-medium">Pricing</a>
      </div>

      <!-- Desktop CTA Buttons -->
      <div class="hidden desktop:flex items-center gap-3">
        <Button variant="primary" size="sm" onclick="window.openTryItOutModal()">
          Start for free
        </Button>
        <Button variant="outline" size="sm" href="#contact">
          Contact Sales
        </Button>
      </div>

      <!-- Mobile Menu Toggle -->
      <button
        id="menu-toggle"
        class="desktop:hidden p-2 text-dark hover:bg-gray-100 rounded-lg transition-colors"
        aria-label="Open menu"
        aria-expanded="false"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </Container>
</nav>

<!-- Mobile Menu Overlay -->
<div id="menu-overlay" class="hidden fixed inset-0 bg-black/50 z-40 desktop:hidden"></div>

<!-- Mobile Menu Drawer -->
<div
  id="mobile-menu"
  class="fixed top-0 right-0 h-full w-80 max-w-[85vw] bg-white z-50 transform translate-x-full transition-transform duration-300 ease-out desktop:hidden shadow-2xl"
>
  <div class="flex flex-col h-full">
    <!-- Header -->
    <div class="flex items-center justify-between p-4 border-b border-border">
      <a href="/" class="flex items-center">
        <span class="text-xl font-semibold text-dark tracking-tight">Cleric</span>
      </a>
      <button
        id="close-menu"
        class="p-2 text-body hover:text-dark hover:bg-gray-100 rounded-lg transition-colors"
        aria-label="Close menu"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Navigation Links -->
    <nav class="flex-1 overflow-y-auto py-4">
      <ul class="space-y-1 px-4">
        <li>
          <a href="#products" class="block py-3 px-4 text-body hover:text-dark hover:bg-gray-50 rounded-lg transition-colors font-medium">
            Products
          </a>
        </li>
        <li>
          <a href="#security" class="block py-3 px-4 text-body hover:text-dark hover:bg-gray-50 rounded-lg transition-colors font-medium">
            Security
          </a>
        </li>
        <li>
          <a href="#resources" class="block py-3 px-4 text-body hover:text-dark hover:bg-gray-50 rounded-lg transition-colors font-medium">
            Resources
          </a>
        </li>
        <li>
          <a href="#docs" class="block py-3 px-4 text-body hover:text-dark hover:bg-gray-50 rounded-lg transition-colors font-medium">
            Docs
          </a>
        </li>
        <li>
          <a href="#pricing" class="block py-3 px-4 text-body hover:text-dark hover:bg-gray-50 rounded-lg transition-colors font-medium">
            Pricing
          </a>
        </li>
      </ul>
    </nav>

    <!-- CTA Buttons -->
    <div class="p-4 border-t border-border space-y-3">
      <Button variant="primary" size="md" class="w-full" onclick="window.openTryItOutModal()">
        Start for free
      </Button>
      <Button variant="outline" size="md" class="w-full" href="#contact">
        Contact Sales
      </Button>
    </div>
  </div>
</div>
