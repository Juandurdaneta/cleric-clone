---
interface Props {
  variant?: 'default' | 'primary' | 'dark';
  class?: string;
}

const { variant = 'default', class: className = '' } = Astro.props;

const variants = {
  default: 'bg-gray-100 text-body border border-border',
  primary: 'bg-blue-50 text-primary border border-blue-200',
  dark: 'bg-dark text-white border border-dark'
};

const classes = `inline-flex items-center px-4 py-1.5 rounded-full text-sm font-medium ${variants[variant]} ${className}`;
---

<span class={classes}>
  <slot />
</span>
