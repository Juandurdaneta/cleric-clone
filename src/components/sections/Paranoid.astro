---
import Container from '../ui/Container.astro';
---

<section id="security" class="section-padding bg-[#F5F5F5]">
  <Container>
    <div class="grid grid-cols-1 desktop:grid-cols-2 gap-12 desktop:gap-16 items-center">
      <!-- Text Content -->
      <div class="fade-in-view">
        <!-- Badge -->
        <span class="inline-block px-3 py-1 mb-6 text-sm text-body bg-[#EAEAEA] rounded">
          Security-first
        </span>

        <h2 class="mb-6">Paranoid by design</h2>

        <p class="text-body font-cleric-sans text-[18px] leading-[140%] max-w-[500px] mb-6">
          Read-only by default. Every action logged, every investigation auditable. Your data encrypted everywhere and never used for training.
        </p>

        <!-- Trust Center Link -->
        <p class="text-body font-cleric-sans text-[16px]">
          Learn more in our <a href="#trust-center" class="underline hover:text-dark transition-colors">Trust Center</a>
          <span class="inline-block ml-0.5">â†—</span>
        </p>
      </div>

      <!-- Security Image -->
      <div class="fade-in-view" style="animation-delay: 0.2s;">
        <img
          src="/images/security.png"
          alt="Security Overview showing encryption status, SSO, SAML, and RBAC all active"
          class="w-full h-auto"
        />
      </div>
    </div>
  </Container>
</section>
