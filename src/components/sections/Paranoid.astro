---
import Container from '../ui/Container.astro';
import Badge from '../ui/Badge.astro';

const securityFeatures = [
  {
    title: 'SOC 2 Type II Certified',
    description: 'Independently audited security controls'
  },
  {
    title: 'End-to-end encryption',
    description: 'Data encrypted in transit and at rest'
  },
  {
    title: 'No training on your data',
    description: 'Your data stays private, always'
  },
  {
    title: 'Role-based access control',
    description: 'Granular permissions for every team member'
  }
];

const complianceBadges = ['SOC 2', 'GDPR', 'HIPAA', 'ISO 27001'];
---

<section id="security" class="section-padding bg-light">
  <Container>
    <div class="grid grid-cols-1 desktop:grid-cols-2 gap-12 desktop:gap-16 items-center">
      <!-- Text Content -->
      <div class="fade-in-view">
        <Badge variant="default" class="mb-4">Security</Badge>
        <h2 class="mb-6">Paranoid by design</h2>
        <p class="large-text text-body mb-8">
          We built Cleric with the assumption that security is non-negotiable. Your infrastructure data never leaves 
          your environment without explicit permission, and we maintain the highest compliance standards.
        </p>

        <!-- Security Features List -->
        <div class="space-y-4 mb-8">
          {securityFeatures.map((feature) => (
            <div class="flex items-start gap-3">
              <div class="w-6 h-6 rounded-full bg-green-100 flex items-center justify-center flex-shrink-0 mt-0.5">
                <svg class="w-4 h-4 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <div>
                <p class="font-medium text-dark">{feature.title}</p>
                <p class="text-sm text-muted">{feature.description}</p>
              </div>
            </div>
          ))}
        </div>

        <!-- Compliance Badges -->
        <div class="flex flex-wrap gap-3">
          {complianceBadges.map((badge) => (
            <div class="px-4 py-2 bg-white border border-border rounded-lg text-sm font-medium text-dark flex items-center gap-2">
              <svg class="w-4 h-4 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
              {badge}
            </div>
          ))}
        </div>
      </div>

      <!-- Illustration/Graphic -->
      <div class="fade-in-view" style="animation-delay: 0.2s;">
        <div class="relative">
          <!-- Background decoration -->
          <div class="absolute inset-0 bg-gradient-to-br from-blue-100 to-purple-100 rounded-3xl transform rotate-3"></div>
          
          <!-- Main Card -->
          <div class="relative bg-white rounded-2xl shadow-xl p-8 border border-border">
            <!-- Shield Icon -->
            <div class="w-20 h-20 bg-gradient-to-br from-primary to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-10 h-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>

            <!-- Security Metrics -->
            <div class="text-center mb-6">
              <p class="text-4xl font-heading font-semibold text-dark mb-2">100%</p>
              <p class="text-muted">Security audit pass rate</p>
            </div>

            <!-- Security Checks Animation -->
            <div class="space-y-3">
              <div class="flex items-center justify-between p-3 bg-green-50 rounded-lg">
                <span class="text-sm text-dark">Data encryption</span>
                <span class="px-2 py-1 bg-green-100 text-green-700 text-xs font-medium rounded">Verified</span>
              </div>
              <div class="flex items-center justify-between p-3 bg-green-50 rounded-lg">
                <span class="text-sm text-dark">Access controls</span>
                <span class="px-2 py-1 bg-green-100 text-green-700 text-xs font-medium rounded">Verified</span>
              </div>
              <div class="flex items-center justify-between p-3 bg-green-50 rounded-lg">
                <span class="text-sm text-dark">Audit logging</span>
                <span class="px-2 py-1 bg-green-100 text-green-700 text-xs font-medium rounded">Verified</span>
              </div>
            </div>

            <!-- Decorative elements -->
            <div class="absolute -top-4 -right-4 w-8 h-8 bg-yellow-400 rounded-full"></div>
            <div class="absolute -bottom-2 -left-2 w-6 h-6 bg-primary rounded-full"></div>
          </div>
        </div>
      </div>
    </div>
  </Container>
</section>
