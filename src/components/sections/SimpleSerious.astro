---
import Container from '../ui/Container.astro';
import Badge from '../ui/Badge.astro';

const features = [
  {
    title: 'Maps your world',
    description: 'Get a clear, dependency-first, and technically-rich diagram. Works across your systems, runbooks, and knowledge base.'
  },
  {
    title: 'Tests every theory',
    description: 'Correlates signals, tests hypotheses, and builds confidence in parallel. Works methodically to parallel tasks.'
  },
  {
    title: 'Compounds over time',
    description: 'Every 30 minutes, Cleric leverages your historical context and historical patterns to fine-tune recommendations.'
  }
];
---

<section class="section-padding bg-white">
  <Container>
    <!-- Header -->
    <div class="text-center max-w-3xl mx-auto mb-16 fade-in-view">
      <Badge variant="default" class="mb-4">UNDER THE HOOD</Badge>
      <h2 class="mb-4">Simple on the surface.<br />Serious underneath.</h2>
      <p class="subtitle text-body">
        These purpose-built systems that turn Cleric into answersâ€”and make every investigation faster than the last.
      </p>
    </div>

    <!-- Features Grid -->
    <div class="grid grid-cols-1 tablet:grid-cols-3 gap-8 tablet:gap-12 mb-16">
      {features.map((feature, index) => (
        <div class="fade-in-view" style={`animation-delay: ${index * 0.1}s`}>
          <h4 class="text-xl tablet:text-2xl font-heading mb-3">{feature.title}</h4>
          <p class="text-body">{feature.description}</p>
        </div>
      ))}
    </div>

    <!-- Visualization -->
    <div class="fade-in-view" style="animation-delay: 0.3s;">
      <div class="bg-light rounded-2xl p-8 tablet:p-12 border border-border">
        <!-- Chart Mockup -->
        <div class="bg-white rounded-xl shadow-sm border border-border p-6 tablet:p-8">
          <!-- Chart Header -->
          <div class="flex items-center justify-between mb-6">
            <div>
              <h5 class="font-medium text-dark mb-1">Incident Resolution Time</h5>
              <p class="text-sm text-muted">Trending down over the last 6 months</p>
            </div>
            <div class="flex items-center gap-4">
              <div class="flex items-center gap-2">
                <div class="w-3 h-3 bg-primary rounded-full"></div>
                <span class="text-sm text-muted">With Cleric</span>
              </div>
              <div class="flex items-center gap-2">
                <div class="w-3 h-3 bg-gray-300 rounded-full"></div>
                <span class="text-sm text-muted">Before</span>
              </div>
            </div>
          </div>

          <!-- Chart Area -->
          <div class="relative h-64">
            <svg class="w-full h-full" viewBox="0 0 800 250" preserveAspectRatio="none">
              <!-- Grid Lines -->
              <line x1="0" y1="50" x2="800" y2="50" stroke="#E5E7EB" stroke-width="1"/>
              <line x1="0" y1="100" x2="800" y2="100" stroke="#E5E7EB" stroke-width="1"/>
              <line x1="0" y1="150" x2="800" y2="150" stroke="#E5E7EB" stroke-width="1"/>
              <line x1="0" y1="200" x2="800" y2="200" stroke="#E5E7EB" stroke-width="1"/>

              <!-- Before Line (gray, higher) -->
              <path
                d="M0,80 C100,75 200,90 300,85 C400,80 500,95 600,90 C700,85 800,100 800,95"
                fill="none"
                stroke="#D1D5DB"
                stroke-width="2"
              />

              <!-- With Cleric Line (blue, lower, trending down) -->
              <path
                d="M0,120 C100,110 200,100 300,90 C400,80 500,70 600,55 C700,45 800,35 800,30"
                fill="none"
                stroke="#2563EB"
                stroke-width="3"
              />

              <!-- Gradient Fill -->
              <defs>
                <linearGradient id="chartGradient" x1="0%" y1="0%" x2="0%" y2="100%">
                  <stop offset="0%" style="stop-color:#2563EB;stop-opacity:0.2" />
                  <stop offset="100%" style="stop-color:#2563EB;stop-opacity:0" />
                </linearGradient>
              </defs>
              <path
                d="M0,120 C100,110 200,100 300,90 C400,80 500,70 600,55 C700,45 800,35 800,30 L800,250 L0,250 Z"
                fill="url(#chartGradient)"
              />
            </svg>

            <!-- Y-axis labels -->
            <div class="absolute left-0 top-0 h-full flex flex-col justify-between text-xs text-muted py-2">
              <span>4h</span>
              <span>3h</span>
              <span>2h</span>
              <span>1h</span>
              <span>0</span>
            </div>
          </div>

          <!-- X-axis labels -->
          <div class="flex justify-between text-xs text-muted mt-4 pl-8">
            <span>Jan</span>
            <span>Feb</span>
            <span>Mar</span>
            <span>Apr</span>
            <span>May</span>
            <span>Jun</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom CTA -->
    <div class="mt-12 text-center fade-in-view" style="animation-delay: 0.4s;">
      <a href="#learn-more" class="inline-flex items-center gap-2 text-primary hover:text-primary-hover font-medium transition-colors">
        Learn more about how Cleric works
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
  </Container>
</section>
