---
import Container from '../ui/Container.astro';
import Badge from '../ui/Badge.astro';

const tabs = [
  { id: 'flexible', label: 'Flexible Dep...' },
  { id: 'application', label: 'Application Eng...' },
  { id: 'sre', label: 'SRE', active: true }
];

const steps = [
  { id: 'learn', label: 'Learn', icon: 'book' },
  { id: 'discover', label: 'Discover', icon: 'search' },
  { id: 'investigate', label: 'Investigate', icon: 'clipboard' }
];

const features = [
  { label: 'Production Systems', icon: 'server' },
  { label: 'Client-specific', icon: 'user' },
  { label: 'Infrastructure', icon: 'database' },
  { label: 'Code', icon: 'code' }
];
---

<section id="product" class="section-padding bg-white">
  <Container>
    <!-- Header -->
    <div class="text-center max-w-3xl mx-auto mb-12 fade-in-view">
      <Badge variant="default" class="mb-4">Meet Cleric</Badge>
      <h2 class="mb-4">Meet Cleric</h2>
      <p class="subtitle text-body">
        Cleric investigates problems, surfaces answers, and learns from your engineers.
      </p>
    </div>

    <!-- Tabs -->
    <div class="flex justify-center gap-2 mb-12 fade-in-view" style="animation-delay: 0.1s;">
      {tabs.map((tab) => (
        <button
          class={`px-4 py-2 rounded-full text-sm font-medium transition-colors ${
            tab.active
              ? 'bg-dark text-white'
              : 'bg-gray-100 text-body hover:bg-gray-200'
          }`}
          data-tab={tab.id}
        >
          {tab.label}
        </button>
      ))}
    </div>

    <!-- Process Flow Visualization -->
    <div class="mb-12 fade-in-view" style="animation-delay: 0.2s;">
      <div class="bg-light rounded-2xl p-8 tablet:p-12 border border-border">
        <div class="flex flex-col desktop:flex-row items-center justify-center gap-6 desktop:gap-8">
          <!-- Alert Icon -->
          <div class="flex flex-col items-center">
            <div class="w-12 h-12 bg-red-100 rounded-xl flex items-center justify-center mb-2">
              <svg class="w-6 h-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
              </svg>
            </div>
            <span class="text-xs text-muted">Alert</span>
          </div>

          <!-- Arrow -->
          <div class="hidden desktop:block">
            <svg class="w-8 h-8 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </div>
          <div class="desktop:hidden">
            <svg class="w-8 h-8 text-gray-300 transform rotate-90" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </div>

          <!-- Process Steps with Cleric Icon in Center -->
          <div class="flex items-center gap-4">
            <!-- Learn -->
            <div class="flex flex-col items-center">
              <div class="w-10 h-10 bg-white rounded-lg border border-border flex items-center justify-center mb-2 shadow-sm">
                <svg class="w-5 h-5 text-body" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
              </div>
              <span class="text-xs text-muted">Learn</span>
            </div>

            <!-- Cleric Icon -->
            <div class="flex flex-col items-center mx-4">
              <div class="w-16 h-16 bg-primary rounded-2xl flex items-center justify-center shadow-lg mb-2">
                <svg class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
            </div>

            <!-- Discover -->
            <div class="flex flex-col items-center">
              <div class="w-10 h-10 bg-white rounded-lg border border-border flex items-center justify-center mb-2 shadow-sm">
                <svg class="w-5 h-5 text-body" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
              </div>
              <span class="text-xs text-muted">Discover</span>
            </div>
          </div>

          <!-- Arrow -->
          <div class="hidden desktop:block">
            <svg class="w-8 h-8 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </div>
          <div class="desktop:hidden">
            <svg class="w-8 h-8 text-gray-300 transform rotate-90" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </div>

          <!-- Investigate -->
          <div class="flex flex-col items-center">
            <div class="w-10 h-10 bg-white rounded-lg border border-border flex items-center justify-center mb-2 shadow-sm">
              <svg class="w-5 h-5 text-body" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
              </svg>
            </div>
            <span class="text-xs text-muted">Investigate</span>
          </div>

          <!-- Arrow to additional icons -->
          <div class="hidden desktop:block">
            <svg class="w-8 h-8 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </div>
          <div class="desktop:hidden">
            <svg class="w-8 h-8 text-gray-300 transform rotate-90" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </div>

          <!-- Additional icons -->
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-white rounded-lg border border-border flex items-center justify-center shadow-sm">
              <svg class="w-5 h-5 text-body" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div class="w-10 h-10 bg-white rounded-lg border border-border flex items-center justify-center shadow-sm">
              <svg class="w-5 h-5 text-body" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Feature Pills -->
    <div class="flex flex-wrap justify-center gap-3 fade-in-view" style="animation-delay: 0.3s;">
      {features.map((feature) => (
        <div class="inline-flex items-center gap-2 px-4 py-2.5 bg-white border border-border rounded-full text-sm font-medium text-body hover:border-dark transition-colors cursor-pointer">
          <svg class="w-4 h-4 text-muted" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M12 5l7 7-7 7" />
          </svg>
          {feature.label}
        </div>
      ))}
    </div>
  </Container>
</section>
