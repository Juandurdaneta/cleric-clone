---
import Container from '../ui/Container.astro';

const stats = [
  {
    value: '5 min',
    label: 'Time to Root Cause'
  },
  {
    value: '92%',
    label: 'Actionable Findings'
  },
  {
    value: '200,000+',
    label: 'Production-Grade Investigations'
  }
];
---

<section class="py-12 tablet:py-16 desktop:py-20 bg-white">
  <Container>
    <div class="grid grid-cols-1 tablet:grid-cols-3 gap-8 tablet:gap-12">
      {stats.map((stat, index) => (
        <div class="text-center fade-in-view" style={`animation-delay: ${index * 0.1}s`}>
          <span class="block text-4xl tablet:text-5xl desktop:text-[56px] font-body font-medium text-dark mb-2">
            {stat.value}
          </span>
          <span class="block text-sm tablet:text-base text-body">
            {stat.label}
          </span>
        </div>
      ))}
    </div>
  </Container>
</section>
